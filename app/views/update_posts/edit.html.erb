<h1>Edit Post</h1>

<%= form_with model: @post, url: edit_post_path(@post), local: true, data: { turbo: false }  do |form| %>
  
  <div class="mb-3 w-25">
    <%= form.label :title  %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3 w-25">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control" %>
  </div>

  <div class="d-grid gap-2 col-1 mx-auto">
    <%= form.submit "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>